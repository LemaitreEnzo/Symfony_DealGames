{% extends 'base.html.twig' %}

{% block title %}Détails de l'annonce
{% endblock %}

{% block body %}
	<h1>{{ ad.title }}</h1>
	<p>{{ ad.description }}</p>
	<p>Publié par :
		{{ ad.author }}</p>
	<img src="{{ asset('uploads/images/' ~ ad.imageName) }}" alt={{ad.imageName}}>
	<p>Catégorie :
		{{ ad.category.name }}</p>

	<a href="{{ path('ad_edit', {'id': ad.id}) }}">Edit</a>

	<form method="post" action="{{ path('ad_delete', {'id': ad.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ad.id) }}">
		<button class="btn">Delete</button>
	</form>
	<a href="{{ path('app_index') }}">Accueil</a>
{% endblock %}
